<script type="text/javascript">

function validate()
{
	
if(document.register.firstname.value=="")
{
	document.getElementById("firstnameid").innerHTML="Please Enter Your First Name";
	document.register.firstname.focus();
	return false;
}

if(document.register.lastname.value=="")
{
	document.getElementById("lastnameid").innerHTML="Please Enter Your Last Name";
	document.register.lastname.focus();
	return false;
}

if(document.register.emailaddress.value=="")
{
	document.getElementById("emailaddressid").innerHTML="Please Enter Your Email Address";
	document.register.emailaddress.focus();
	return false;
}

if(document.register.passsword.value=="")
{
	document.getElementById("passwordid").innerHTML="Please Enter Your Password";
	document.register.passsword.focus();
	return false;
}


if(document.register.confirm.value=="")
{
	document.getElementById("confirmid").innerHTML="Please Enter Your Password Again";
	document.register.confirm.focus();
	return false;
}



//PASSWORD VALIDATION
var password=document.getElementById("passsword").value;

	var confirmpassword=document.getElementById("confirm").value;

if(password!=confirmpassword)
{
	alert("passwords do not match");
	return false;
}


return true;
}


</script>


